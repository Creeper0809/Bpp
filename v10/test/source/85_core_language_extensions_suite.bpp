//=== CASE 111_match_alias_with_wildcard
func classify(v: u64) -> u64 {
    match (v) {
        case 1:
            return 10;
        case 2:
            return 20;
        case _:
            return 99;
    }
}

func main() -> u64 {
    if (classify(1) != 10) { return 1; }
    if (classify(2) != 20) { return 2; }
    if (classify(777) != 99) { return 3; }
    return 0;
}
//=== END

