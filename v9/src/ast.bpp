// ast.b - AST node constructors for v3.8

import std.io;
import types;

// Base AST node header
struct AstNode {
    public kind: u64;
}

// ============================================
// Expression Nodes
// ============================================

// AST Literal node layout (16 bytes)
struct AstLiteral {
    public kind: u64;
    public value: u64;
}

// AST Identifier node layout (24 bytes)
struct AstIdent {
    public kind: u64;
    public name_ptr: u64;
    public name_len: u64;
}

// AST String node layout (24 bytes)
struct AstString {
    public kind: u64;
    public str_ptr: u64;
    public str_len: u64;
}

// AST Binary operation node layout (32 bytes)
struct AstBinary {
    public kind: u64;
    public op: u64;
    public left: *AstNode;
    public right: *AstNode;
}

// AST Unary operation node layout (24 bytes)
struct AstUnary {
    public kind: u64;
    public op: u64;
    public operand: *AstNode;
}

// AST Float literal node layout (24 bytes)
struct AstFloat {
    public kind: u64;
    public str_ptr: u64;
    public str_len: u64;
}

// AST Try node layout (16 bytes)
struct AstTry {
    public kind: u64;
    public operand: *AstNode;
}

// AST Super node layout (8 bytes)
struct AstSuper {
    public kind: u64;
}

const AST_CALL_ORIGIN_DIRECT = 0;
const AST_CALL_ORIGIN_MEMBER_LOWERED = 1;

// AST Function call node layout
struct AstCall {
    public kind: u64;
    public name_ptr: u64;
    public name_len: u64;
    public args_vec: *Vec<*AstNode>;
    public origin: u64;
}

// AST Generic call node layout
struct AstGenericCall {
    public kind: u64;
    public name_ptr: u64;
    public name_len: u64;
    public generic_args_vec: *Vec<*GenericArg>;
    public args_vec: *Vec<*AstNode>;
    public origin: u64;
}

// AST Generic struct literal node layout
struct AstGenericStructLiteral {
    public kind: u64;
    public name_ptr: u64;
    public name_len: u64;
    public generic_args_vec: *Vec<*GenericArg>;
    public values_vec: *Vec<*AstNode>;
}

// AST Static generic method call node layout
struct AstStaticGenericCall {
    public kind: u64;
    public struct_name_ptr: u64;
    public struct_name_len: u64;
    public method_ptr: u64;
    public method_len: u64;
    public generic_args_vec: *Vec<*GenericArg>;
    public args_vec: *Vec<*AstNode>;
}

// AST Function pointer call node layout (24 bytes)
struct AstCallPtr {
    public kind: u64;
    public callee: *AstNode;
    public args_vec: *Vec<*AstNode>;
}

// AST_LITERAL: [kind, value]
func ast_literal(val: u64) -> *AstLiteral {
    var node: *AstLiteral = (*AstLiteral)heap_alloc(sizeof(AstLiteral));
    node.kind = AST_LITERAL;
    node.value = val;
    return node;
}

// AST_IDENT: [kind, name_ptr, name_len]
func ast_ident(name_ptr: u64, name_len: u64) -> *AstIdent {
    var node: *AstIdent = (*AstIdent)heap_alloc(sizeof(AstIdent));
    node.kind = AST_IDENT;
    node.name_ptr = name_ptr;
    node.name_len = name_len;
    return node;
}

// AST_STRING: [kind, str_ptr, str_len]
func ast_string(str_ptr: u64, str_len: u64) -> *AstString {
    var node: *AstString = (*AstString)heap_alloc(sizeof(AstString));
    node.kind = AST_STRING;
    node.str_ptr = str_ptr;
    node.str_len = str_len;
    return node;
}

// AST_FLOAT: [kind, str_ptr, str_len]
func ast_float(str_ptr: u64, str_len: u64) -> *AstFloat {
    var node: *AstFloat = (*AstFloat)heap_alloc(sizeof(AstFloat));
    node.kind = AST_FLOAT;
    node.str_ptr = str_ptr;
    node.str_len = str_len;
    return node;
}

// AST_BINARY: [kind, op, left, right]
func ast_binary(op: u64, left: *AstNode, right: *AstNode) -> *AstBinary {
    var node: *AstBinary = (*AstBinary)heap_alloc(sizeof(AstBinary));
    node.kind = AST_BINARY;
    node.op = op;
    node.left = left;
    node.right = right;
    return node;
}

// AST_UNARY: [kind, op, operand]
func ast_unary(op: u64, operand: *AstNode) -> *AstUnary {
    var node: *AstUnary = (*AstUnary)heap_alloc(sizeof(AstUnary));
    node.kind = AST_UNARY;
    node.op = op;
    node.operand = operand;
    return node;
}

// AST_TRY: [kind, operand]
func ast_try(operand: *AstNode) -> *AstTry {
    var node: *AstTry = (*AstTry)heap_alloc(sizeof(AstTry));
    node.kind = AST_TRY;
    node.operand = operand;
    return node;
}

// AST_SUPER: [kind]
func ast_super() -> *AstSuper {
    return new AstSuper{AST_SUPER};
}

// AST_CALL: [kind, name_ptr, name_len, args_vec]
func ast_call(name_ptr: u64, name_len: u64, args: *Vec<*AstNode>) -> *AstCall {
    return ast_call_with_origin(name_ptr, name_len, args, AST_CALL_ORIGIN_DIRECT);
}

func ast_call_with_origin(name_ptr: u64, name_len: u64, args: *Vec<*AstNode>, origin: u64) -> *AstCall {
    var node: *AstCall = (*AstCall)heap_alloc(sizeof(AstCall));
    node.kind = AST_CALL;
    node.name_ptr = name_ptr;
    node.name_len = name_len;
    node.args_vec = args;
    node.origin = origin;
    return node;
}

// AST_GENERIC_CALL: [kind, name_ptr, name_len, generic_args_vec, args_vec]
func ast_generic_call(name_ptr: u64, name_len: u64, generic_args: *Vec<*GenericArg>, args: *Vec<*AstNode>) -> *AstGenericCall {
    return ast_generic_call_with_origin(name_ptr, name_len, generic_args, args, AST_CALL_ORIGIN_DIRECT);
}

func ast_generic_call_with_origin(name_ptr: u64, name_len: u64, generic_args: *Vec<*GenericArg>, args: *Vec<*AstNode>, origin: u64) -> *AstGenericCall {
    return new AstGenericCall{AST_GENERIC_CALL, name_ptr, name_len, generic_args, args, origin};
}

func ast_generic_struct_literal(name_ptr: u64, name_len: u64, generic_args: *Vec<*GenericArg>, values: *Vec<*AstNode>) -> *AstGenericStructLiteral {
    return new AstGenericStructLiteral{AST_GENERIC_STRUCT_LITERAL, name_ptr, name_len, generic_args, values};
}

func ast_static_generic_call(struct_name_ptr: u64, struct_name_len: u64, method_ptr: u64, method_len: u64, generic_args: *Vec<*GenericArg>, args: *Vec<*AstNode>) -> *AstStaticGenericCall {
    return new AstStaticGenericCall{AST_STATIC_GENERIC_CALL, struct_name_ptr, struct_name_len, method_ptr, method_len, generic_args, args};
}

