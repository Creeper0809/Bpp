// mem.b - Memory utilities for v3.16

import std.io;

func memset(dst, value, len) {
    var v = value & 255;
    var dst_u8: *u8 = (*u8)dst;
    for (var i = 0; i < len; i++) {
        dst_u8[i] = v;
    }
    return dst;
}

func malloc(size) {
    return heap_alloc(size);
}

func free(ptr) {
    return heap_free(ptr);
}
