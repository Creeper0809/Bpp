// Covers: f64 literals, arithmetic, and comparisons
// Mode: ssa|nossa
// Opt: O0|O1
// Expect exit code: 0

func add(a: f64, b: f64) -> f64 {
    return a + b;
}

func main() -> u64 {
    // Import

    // Setup
    var a: f64 = 1.5;
    var b: f64 = 2.25;

    // Execution
    var c: f64 = add(a, b);
    if (c == 3.75) { }
    else { return 1; }

    var d: f64 = c * 2.0;
    if (d > 7.0) { }
    else { return 2; }

    var e: f64 = d / 2.0;
    if (e < 3.0) { return 3; }

    var f: f64 = -e;
    if (f >= 0.0) { return 4; }

    // Assertion
    return 0;
}
