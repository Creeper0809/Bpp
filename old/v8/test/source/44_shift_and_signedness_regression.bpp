// Covers: signed/unsigned compare and right-shift semantics regression
// Mode: ssa|nossa
// Opt: O0|O1
// Expect exit code: 0

func main() -> i64 {
    var u0: u64 = 0;
    if (u0 < 0) { return 1; }
    if (!(u0 >= 0)) { return 2; }

    var s0: i64 = -1;
    if (!(s0 < 0)) { return 3; }
    if (s0 >= 0) { return 4; }

    var s1: i64 = -8;
    var s1r: i64 = s1 >> 1;
    if (s1r != -4) { return 5; }

    var u1: u64 = 0 - 8;
    var u1r: u64 = u1 >> 1;
    if (u1r != (u1 / 2)) { return 6; }

    var folded_signed: i64 = -8 >> 1;
    if (folded_signed != -4) { return 7; }

    return 0;
}
